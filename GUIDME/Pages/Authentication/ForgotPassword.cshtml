@page
@model GUIDME.Pages.Authenthication.ForgotPasswordModel
@{
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
    ViewData["PageTitle"] = "Quên Mật Khẩu";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="text-center mb-4">Quên Mật Khẩu</h3>
                    <form method="post">
                        <div class="form-group">
                            <label for="email"><i class="fa fa-envelope"></i> Email</label>
                            <input type="email" class="form-control" id="email" name="Email" required placeholder="Nhập email của bạn" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-4">Gửi Liên Kết Đặt Lại</button>
                    </form>

                    @if (Model.Message != null)
                    {
                        <div class="alert alert-info mt-3">@Model.Message</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
