<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <title>GUIDME - Website Đại Lý Du Lịch tại Đà Nẵng</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/TemplateFiles/img/favicon.ico" rel="icon">
    <script src="~/js/notifications.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Biểu tượng & Thư viện Font -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Thư viện CSS -->
    <link href="/TemplateFiles/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/TemplateFiles/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/TemplateFiles/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Tùy chỉnh Bootstrap -->
    <link href="/TemplateFiles/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS chính -->
    <link href="/TemplateFiles/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Hiển thị vòng quay tải -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Đang tải...</span>
        </div>
    </div>
    <!-- Kết thúc vòng quay tải -->
    <!-- Thanh thông tin đầu trang -->
    <div class="container-fluid bg-dark px-5 d-none d-lg-block">
        <div class="row gx-0">
            <div class="col-lg-8 text-center text-lg-start mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center" style="height: 45px;">
                    <small class="me-3 text-light"><i class="fa fa-map-marker-alt me-2"></i>Đại Học FPT, TP. Đà Nẵng, Việt Nam</small>
                    <small class="me-3 text-light"><i class="fa fa-phone-alt me-2"></i>+84 123 456 789</small>
                    <small class="text-light"><i class="fa fa-envelope-open me-2"></i>info@example.com</small>
                </div>
            </div>
            <div class="col-lg-4 text-center text-lg-end">
                <div class="d-inline-flex align-items-center" style="height: 45px;">
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-twitter fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-facebook-f fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-linkedin-in fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-instagram fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle" href=""><i class="fab fa-youtube fw-normal"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- Kết thúc thanh thông tin đầu trang -->
    <!-- Thanh điều hướng & phần giới thiệu -->
    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
            <a href="/Customer/Index" class="navbar-brand p-0">
                <h1 class="text-primary m-0"><i class="fa fa-map-marker-alt me-3"></i>GUIDME</h1>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="/Customer/Index" class="nav-item nav-link active">Trang chủ</a>
                    <a href="/Customer/About" class="nav-item nav-link">Giới thiệu</a>
                    <a href="/Customer/FixedTour/Tour" class="nav-item nav-link">Gói du lịch </a>
                    <a href="/Customer/Contact" class="nav-item nav-link">Liên hệ</a>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Nếu đã đăng nhập, hiển thị avatar và dropdown -->
                    <div class="dropdown">
                        <a class="btn btn-light rounded-pill py-2 px-4 dropdown-toggle" href="#" role="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user-circle"></i> @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="userMenu">
                            <li><a class="dropdown-item" href="/Customer/Profile">Thông Tin Cá Nhân</a></li>
                           
                            <li><a class="dropdown-item" href="/Customer/CreateTourGuideRequest">Đăng Ký Thành hướng dẫn viên</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a href="/Authentication/Logout" class="dropdown-item text-danger">
                                    <i class="fa fa-sign-out-alt"></i> Đăng Xuất
                                </a>

                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <!-- Nếu chưa đăng nhập, hiển thị nút đăng nhập -->
                    <a href="/Authentication/Login" class="btn btn-primary rounded-pill py-2 px-4">
                        <i class="fa fa-sign-in-alt"></i> Đăng Nhập
                    </a>
                }

            </div>
        </nav>

        <div class="container-fluid bg-primary py-5 mb-5 hero-header">
            <div class="container py-5">
                <div class="row justify-content-center py-5">
                    <div class="col-lg-10 pt-lg-5 mt-lg-5 text-center">
                        <h1 class="display-3 text-white animated slideInDown">@ViewData["PageTitle"]</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a href="/Customer/Index">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="#">Trang</a></li>
                                <li class="breadcrumb-item text-white active" aria-current="page">@ViewData["PageTitle"]</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Kết thúc phần điều hướng & giới thiệu -->

    <div class="container">
        @RenderBody()
    </div>

    <!-- Chân trang -->
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-white mb-3">Công ty</h4>
                    <a class="btn btn-link" href="">Về chúng tôi</a>
                    <a class="btn btn-link" href="">Liên hệ</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Kết thúc chân trang -->
    <!-- Nút quay lại đầu trang -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- Thư viện JavaScript -->
 

    <script src="/TemplateFiles/js/jquery-3.4.1.min.js"></script>
    <script src="/TemplateFiles/js/bootstrap.bundle.min.js"></script>
    <script src="/TemplateFiles/lib/wow/wow.min.js"></script>
    <script src="/TemplateFiles/lib/easing/easing.min.js"></script>
    <script src="/TemplateFiles/lib/waypoints/waypoints.min.js"></script>
    <script src="/TemplateFiles/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/TemplateFiles/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/TemplateFiles/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/TemplateFiles/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Javascript chính -->
    <script src="/TemplateFiles/js/main.js"></script>
</body>

</html>
