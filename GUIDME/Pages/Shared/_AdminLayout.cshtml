@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Quản Trị Viên</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #343a40;
            color: white;
            position: fixed;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 15px;
                display: block;
            }

                .sidebar a:hover {
                    background: #495057;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Thanh điều hướng bên trái -->
    <div class="sidebar">
        <h4 class="text-center">Quản Trị Viên</h4>
        <a href="/Admin/Dashboard"><i class="fas fa-tachometer-alt"></i> Trang Chủ</a>
        <a href="/Admin/Users"><i class="fas fa-user"></i> Người Dùng</a>
        <a href="/Admin/FixedTour/Tour"><i class="fas fa-globe"></i> Tour Cố Định</a>
        <a href="/Admin/Bookings"><i class="fas fa-book"></i> Đặt Tour</a>
        <a href="/Admin/Payments"><i class="fas fa-credit-card"></i> Thanh Toán</a>
        <a href="/Admin/Feedback"><i class="fas fa-comments"></i> Phản Hồi</a>
        <li>
            <a href="/Authentication/Logout" class="dropdown-item text-danger">
                <i class="fa fa-sign-out-alt"></i> Đăng Xuất
            </a>
        </li>
    </div>

    <!-- Nội dung chính -->
    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Bảng Điều Khiển Quản Trị</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-user"></i> Quản Trị Viên</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Chèn nội dung từ các trang con -->
        @RenderBody()

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
