@page
@model GUIDME.Pages.Admin.FixedTour.EditTourModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Chỉnh Sửa Tour Cố Định</h2>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Tour.TourId" />
        <div class="mb-3">
            <label class="form-label">Ảnh Thumbnail</label>
            @if (!string.IsNullOrEmpty(Model.Tour.ThumbnailUrl))
            {
                <div>
                    <img src="@Model.Tour.ThumbnailUrl" class="img-thumbnail" width="150" height="100" />
                </div>
            }
            <input type="file" class="form-control" asp-for="ThumbnailFile" />
        </div>


        <div class="mb-3">
            <label class="form-label">Tên Tour</label>
            <input type="text" class="form-control" asp-for="Tour.Name" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Mô Tả</label>
            <textarea class="form-control" asp-for="Tour.Description"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Ngày Bắt Đầu</label>
            <input type="date" class="form-control" asp-for="Tour.StartDate" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Ngày Kết Thúc</label>
            <input type="date" class="form-control" asp-for="Tour.EndDate" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Giá</label>
            <input type="number" class="form-control" asp-for="Tour.Price" required />
        </div>

        <!-- Hiển thị danh sách ảnh hiện tại -->
        <div class="mb-3">
            <label class="form-label">Hình Ảnh Hiện Tại</label>
            <div class="d-flex flex-wrap">
                @foreach (var image in Model.TourImages)
                {
                    <div class="me-2">
                        <img src="@image.ImageUrl" class="img-thumbnail" width="100" height="100" />
                    </div>
                }
            </div>
        </div>

        <!-- Tải ảnh mới -->
        <div class="mb-3">
            <label class="form-label">Tải Ảnh Mới</label>
            <input type="file" class="form-control" asp-for="ImageFiles" multiple />
        </div>

        <button type="submit" class="btn btn-primary">Cập Nhật</button>
    </form>
</div>
