@page
@model GUIDME.Pages.Customer.UpdateProfileModel
@{
    Layout = "/Pages/Shared/_CustomerLayout.cshtml";
    ViewData["PageTitle"] = "Thông Tin người dùng";
}



<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>Update Your Profile</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title mb-4">
                            <div class="d-flex justify-content-start">
                                <div class="image-container">
                                    <img src="@Model.UserProfile.ImageUrl" id="imgProfile" style="width: 150px; height: 150px;" class="img-thumbnail" />
                                </div>
                                <div class="userData ml-3">
                                    <h2 class="d-block" style="font-size: 1.5rem; font-weight: bold">
                                        @Model.UserProfile.Name
                                    </h2>
                                </div>
                            </div>

                            <form method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="Name">Full Name</label>
                                            <input type="text" class="form-control" id="Name" asp-for="UserProfile.Name" required />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="Username">Username</label>
                                            <input type="text" class="form-control" id="Username" asp-for="UserProfile.Username" required />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="Email">Email</label>
                                            <input type="email" class="form-control" id="Email" asp-for="UserProfile.Email" required />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="Mobile">Mobile</label>
                                            <input type="text" class="form-control" id="Mobile" asp-for="UserProfile.Mobile" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="Address">Address</label>
                                            <input type="text" class="form-control" id="Address" asp-for="UserProfile.Address" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="DateOfBirth">Date of Birth</label>
                                            <input type="date" class="form-control" id="DateOfBirth" asp-for="UserProfile.DateOfBirth" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="Gender">Gender</label>
                                            <select class="form-control" id="Gender" asp-for="UserProfile.Gender">
                                                <option value="">Select Gender</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                                <option value="Other">Other</option>
                                            </select>
                                        </div>
                                    </div>
                                    @* <div class="col-6">
                                        <div class="form-group">
                                            <label for="ExperienceYears">Experience Years</label>
                                            <input type="number" class="form-control" id="ExperienceYears" asp-for="UserProfile.ExperienceYears" min="0" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="Certification">Certification</label>
                                            <input type="text" class="form-control" id="Certification" asp-for="UserProfile.Certification" />
                                        </div>
                                    </div> *@
                                    @* <div class="col-6">
                                        <div class="form-group">
                                            <label for="Role">Role</label>
                                            <input type="text" class="form-control" id="Role" asp-for="UserProfile.Role" readonly />
                                        </div>
                                    </div> *@
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="Image">Profile Picture</label>
                                            <input type="file" class="form-control" id="Image" name="file" />
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-success">Save Changes</button>
                                <a asp-page="/Customer/Profile" class="btn btn-secondary ml-2">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>